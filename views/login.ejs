<%- include("partials/header.ejs", {name}) %>

    <div class="container d-flex flex-column justify-content-center align-items-center" style="height: 500px;">
        <form action="/login" method="POST" >
            <label class="my-2" style="margin-left:-5px" for="inputUser">Username</label>
            <input class="px-1" id="inputUser" name="inputUsername" required><br>
            <label class="my-2" for="inputPassword">Password</label>
            <input class="px-1" type="password" id="inputPassword" name="inputPassword" required><br>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn brown btn-outline-light  me-2">Login</button>
            </div>
        </form>
        
    </div>

